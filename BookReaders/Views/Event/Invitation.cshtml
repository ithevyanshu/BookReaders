@using Shared
@model List<Event>
@{
    ViewData["Title"] = "Invitations";
}

<h2>Invitations</h2>

<div class="container">
    <div class="row">
        <div class="col-6">
            @foreach (var eventItem in Model)
            {
                <ul>
                    <li>
                        <a asp-action="ViewEvent" asp-controller="Event" asp-route-id="@eventItem.EventId">@eventItem.Title</a>
                    </li>
                </ul>
            }
        </div>
    </div>
</div>